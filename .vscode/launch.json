    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current TS test file debug",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/_mocha", "-r", "ts-node/register" , "${relativeFile}", "--no-timeouts", "--exit"],
            "internalConsoleOptions": "neverOpen",
            "port": 9229,
            "env": {"NODE_ENV":"test"}
      }
    ]
}
